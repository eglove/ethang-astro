---
type Props = {
  title: string;
  description: string;
};

import frontendMastersImage from "../images/frontend-masters-72x72.png";
import credlyImage from "../images/credly.svg";
import githubImage from "../images/github.svg";
import linkedinImage from "../images/linkedin.svg";
import Speculation from "./Speculation.astro";
import Head from "./Head.astro";

const { title, description } = Astro.props;
---

<!doctype html>
<html lang="en" data-theme="dark">
  <Head title={title} description={description} />

  <body class="container">
    <header>
      <nav>
        <ul>
          <li>
            <a id="Home" href="/">
              <strong>EthanG</strong>
            </a>
          </li>
        </ul>
        <ul>
          <li>
            <a
              id="Credly"
              target="_blank"
              href="https://www.credly.com/users/ethan-glover.341d99c5"
            >
              <img height="48" width="48" src={credlyImage.src} alt="Credly" />
            </a>
          </li>

          <li>
            <a id="GitHub" target="_blank" href="https://github.com/eglove">
              <img height="48" width="48" src={githubImage.src} alt="GitHub" />
            </a>
          </li>
          <li>
            <a
              id="LinkedIn"
              target="_blank"
              href="https://www.linkedin.com/in/ethan-glover/"
            >
              <img
                height="48"
                width="48"
                src={linkedinImage.src}
                alt="LinkedIn"
              />
            </a>
          </li>
        </ul>
      </nav>
    </header>
    <slot />
    <Speculation />
  </body>
</html>
